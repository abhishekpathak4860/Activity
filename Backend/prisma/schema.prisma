generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id             String   @id @default(uuid())
  actor_id       String
  verb           String
  object_type    String
  object_id      String
  target_user_id String
  created_at     DateTime @default(now())

  // Indexing for performance (Requirement: P95 feed should be fast)
  @@index([target_user_id, created_at(sort: Desc)])
  @@index([created_at])
}
